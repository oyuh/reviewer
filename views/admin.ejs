<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-900 text-white">
    <header class="flex items-center justify-between p-4 bg-gray-800">
        <div>
            <a href="/" class="text-xl font-bold text-white"><i class="fas fa-home"></i></a>
        </div>
        <div class="flex items-center">
            <% if (sessionUser) { %>
                <% if (sessionUser.isAdmin) { %>
                    <a href="/admin" class="ml-4">Admin</a>
                <% } %>
                <a href="/profile" class="ml-4"><%= sessionUser.username %></a>
                <a href="/logout" class="ml-4">Logout</a>
            <% } else { %>
                <a href="/login" class="ml-4">Login</a>
                <a href="/register" class="ml-4">Register</a>
            <% } %>
        </div>
    </header>
    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-6 text-center">Admin Panel</h1>
        
        <% if (errorMessage) { %>
            <div class="text-red-500 text-center mb-4"><%= errorMessage %></div>
        <% } %>

        <h2 class="text-2xl font-semibold mb-4">Users</h2>
        <div class="overflow-x-auto mb-8">
            <table class="min-w-full bg-gray-800 rounded-lg overflow-hidden">
                <thead>
                    <tr>
                        <th class="px-4 py-2 bg-gray-700 text-left">Username</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">User ID</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                    <tr class="border-t border-gray-600">
                        <td class="px-4 py-2 text-center">
                            <form action="/admin/update-username" method="POST">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <input type="text" name="newUsername" value="<%= user.username %>" class="bg-gray-800 text-white p-2 rounded">
                        </td>
                        <td class="px-4 py-2 text-center"><%= user.id %></td>
                        <td class="px-4 py-2 text-center">
                                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded ml-2">Edit</button>
                            </form>
                            <form action="/admin/remove-user" method="POST" class="inline-block">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded ml-2">Remove</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <h2 class="text-2xl font-semibold mb-4">Posts</h2>
        <div class="overflow-x-auto mb-8">
            <table class="min-w-full bg-gray-800 rounded-lg overflow-hidden">
                <thead>
                    <tr>
                        <th class="px-4 py-2 bg-gray-700 text-left">Post</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Creator</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Post ID</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                    <tr class="border-t border-gray-600">
                        <td class="px-4 py-2 text-center">
                            <form action="/admin/update-post" method="POST">
                                <input type="hidden" name="postId" value="<%= post.id %>">
                                <input type="text" name="postValue" value="<%= post.value %>" class="bg-gray-800 text-white p-2 rounded w-full">
                                <input type="text" name="postImageLinks" value="<%= post.imageLink %>" class="bg-gray-800 text-white p-2 rounded w-full">
                        </td>
                        <td class="px-4 py-2 text-center">
                            <input type="hidden" name="creatorId" value="<%= post.creatorId %>">
                            <input type="text" name="creator" value="<%= post.creator %>" class="bg-gray-800 text-white p-2 rounded">
                        </td>
                        <td class="px-4 py-2 text-center"><%= post.id %></td>
                        <td class="px-4 py-2 text-center">
                                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded ml-2">Edit</button>
                            </form>
                            <form action="/admin/remove-post" method="POST" class="inline-block">
                                <input type="hidden" name="postId" value="<%= post.id %>">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded ml-2">Remove</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <h2 class="text-2xl font-semibold mb-4">Logs</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-gray-800 rounded-lg overflow-hidden">
                <thead>
                    <tr>
                        <th class="px-4 py-2 bg-gray-700 text-left">Timestamp</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Action</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">Details</th>
                        <th class="px-4 py-2 bg-gray-700 text-left">User</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log => { %>
                    <tr class="border-t border-gray-600">
                        <td class="px-4 py-2"><%= log.timestamp %></td>
                        <td class="px-4 py-2"><%= log.action %></td>
                        <td class="px-4 py-2"><%= log.details %></td>
                        <td class="px-4 py-2"><%= log.user %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <footer class="flex justify-center p-4 bg-gray-800 mt-10">
        Â© 2024
    </footer>
</body>
</html>
