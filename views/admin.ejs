<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Admin Panel</title>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <nav class="bg-gray-800 p-4 flex justify-between">
        <div class="flex items-center">
            <a href="/" class="text-white text-xl"><i class="fas fa-home"></i></a>
        </div>
        <div class="flex items-center">
            <% if (user) { %>
                <% if (user.isAdmin) { %>
                    <a href="/admin" class="ml-4">Admin</a>
                <% } %>
                <a href="/profile" class="ml-4"><%= user.username %></a>
                <a href="/logout" class="ml-4">Logout</a>
            <% } else { %>
                <a href="/login" class="ml-4">Login</a>
                <a href="/register" class="ml-4">Register</a>
            <% } %>
        </div>
    </nav>
    <div class="container mx-auto p-4 flex-grow">
        <h1 class="text-3xl mb-4">Admin Panel</h1>

        <% if (errorMessage) { %>
            <div class="text-red-500"><%= errorMessage %></div>
        <% } %>

        <div class="mb-6">
            <h2 class="text-2xl mb-2">Users</h2>
            <table class="table-auto w-full bg-gray-800 rounded-lg">
                <thead>
                    <tr>
                        <th class="px-4 py-2">Username</th>
                        <th class="px-4 py-2">User ID</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td class="px-4 py-2">
                                <form action="/admin/editUser" method="POST" class="flex items-center">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <input type="text" name="username" value="<%= user.username %>" class="bg-gray-700 text-white p-2 rounded">
                                    <button type="submit" class="ml-2 bg-blue-500 text-white px-2 py-1 rounded">Edit</button>
                                </form>
                            </td>
                            <td class="px-4 py-2"><%= user.id %></td>
                            <td class="px-4 py-2">
                                <form action="/admin/removeUser" method="POST">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <button type="submit" class="bg-red-500 text-white px-2 py-1 rounded">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="mb-6">
            <h2 class="text-2xl mb-2">Posts</h2>
            <table class="table-auto w-full bg-gray-800 rounded-lg">
                <thead>
                    <tr>
                        <th class="px-4 py-2">Post</th>
                        <th class="px-4 py-2">Creator</th>
                        <th class="px-4 py-2">Image URL</th>
                        <th class="px-4 py-2">Post ID</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td class="px-4 py-2">
                                <form action="/admin/editPost" method="POST" class="flex items-center">
                                    <input type="hidden" name="id" value="<%= post.id %>">
                                    <input type="text" name="value" value="<%= post.value %>" class="bg-gray-700 text-white p-2 rounded">
                            </td>
                            <td class="px-4 py-2">
                                    <input type="text" name="creator" value="<%= post.creator %>" class="bg-gray-700 text-white p-2 rounded">
                            </td>
                            <td class="px-4 py-2">
                                    <input type="text" name="imageLink" value="<%= post.imageLink %>" class="bg-gray-700 text-white p-2 rounded">
                            </td>
                            <td class="px-4 py-2"><%= post.id %></td>
                            <td class="px-4 py-2">
                                    <button type="submit" class="ml-2 bg-blue-500 text-white px-2 py-1 rounded">Edit</button>
                                </form>
                                <form action="/admin/removePost" method="POST">
                                    <input type="hidden" name="id" value="<%= post.id %>">
                                    <button type="submit" class="bg-red-500 text-white px-2 py-1 rounded mt-2">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div>
            <h2 class="text-2xl mb-2">Logs</h2>
            <table class="table-auto w-full bg-gray-800 rounded-lg">
                <thead>
                    <tr>
                        <th class="px-4 py-2">Timestamp</th>
                        <th class="px-4 py-2">Action</th>
                        <th class="px-4 py-2">Details</th>
                        <th class="px-4 py-2">User</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log => { %>
                        <tr>
                            <td class="px-4 py-2"><%= log.timestamp %></td>
                            <td class="px-4 py-2"><%= log.action %></td>
                            <td class="px-4 py-2"><%= log.details %></td>
                            <td class="px-4 py-2"><%= log.user %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <footer class="bg-gray-800 p-4 text-center mt-auto">
        <p>Lawson Hart | &copy; 2024 </p>
    </footer>
</body>
</html>
